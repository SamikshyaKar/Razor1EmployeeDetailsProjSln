@page
@model Razor1EmployeeDetailsProj.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employess Index";
}
<style>
    .btn{

        width:75px;
    }

</style>
<h1>Employee Details  @Model.Employeesproperty.Count() </h1>
<div class=" card-deck">

    @foreach(var emploopvariable in Model.Employeesproperty)
    {

        var photopathvar = "~/Images/" + (emploopvariable.photopath?? "DSC_0141.jpg") ;

        <div class="card m-3" style="min-width:18rem ; max-width:30.5%">

            <div class="card-header">

                <h3>@emploopvariable.Name</h3>

            </div>

         <img class=" card-img-top img-thumbnail" src= "@photopathvar" asp-append-version="true" />

         <div class="card-footer text-center">

             <a asp-page="/Employees/EmpDetails" asp-route-ID="@emploopvariable.EmpID" class="btn btn-primary m-1">View </a>
             <a href="#" class="btn btn-primary m-1">Edit </a>
             <a href="#" class="btn btn-danger m-1">Delete </a>

         </div>


        </div>
             
             
             }

</div>