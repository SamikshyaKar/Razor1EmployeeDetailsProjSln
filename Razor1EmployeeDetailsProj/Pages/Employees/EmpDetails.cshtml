@page
@model Razor1EmployeeDetailsProj.Pages.Employees.EmpDetailsModel
@{
    ViewData["Title"] = "EmpDetails";
    //var photopathvar = "~/Images/" + (Model.EmpDetailProperty.photopath ?? "DSC_0141.jpg");
    var photopathdetailvar = "~/Images/" + (Model.EmpDetailProperty.photopath ?? "DSC_0141.jpg");
}
<h1> Employee Details @Model.EmpDetailProperty.Department </h1>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.EmpDetailProperty.Name</h1>
            </div>

              
            <div class="card-body text-center">

                <img class="card-img-top" src="@photopathdetailvar"  asp-append-version="true" />

                <h4> Employees ID: @Model.EmpDetailProperty.EmpID</h4>
                <h4>Employees Name: @Model.EmpDetailProperty.Email</h4>
                <h4>Employees Name: @Model.EmpDetailProperty.Department</h4>

            </div> 


            <div class="card-footer text-center">
                <a asp-page="/Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>


            </div>


                </div>

                   </div>

                     </div>